<style>
    #gallery {
        padding: 6rem 0;
        text-align: center;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-auto-rows: 250px;
        gap: 1.5rem;
        margin-top: 3rem;
    }

    .gallery-item {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .gallery-item.large {
        grid-column: span 2;
        grid-row: span 2;
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .gallery-item:hover img {
        transform: scale(1.05);
    }

    /* Contact Section */
    #contact {
        padding: 6rem 0;
        background-color: #FFF8EE;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
    }

    .contact-text {
        margin-bottom: 2.5rem;
        color: var(--color-text-light);
    }

    .contact-details {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }

    .contact-item {
        display: flex;
        gap: 1rem;
    }

    .contact-item svg {
        color: var(--color-secondary);
        min-width: 24px;
    }

    .contact-item h4 {
        margin-bottom: 0.3rem;
        color: var(--color-primary);
    }

    .contact-item p {
        color: var(--color-text-light);
    }

    .social-links {
        display: flex;
        gap: 1.5rem;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--color-tertiary);
        color: var(--color-primary);
        transition: all 0.3s ease;
    }

    .social-links a:hover {
        background-color: var(--color-secondary);
        transform: translateY(-3px);
    }

    .contact-form-container {
        background-color: #fff;
        border-radius: 10px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .contact-form h3 {
        font-size: 1.8rem;
        margin-bottom: 2rem;
        color: var(--color-primary);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--color-primary);
    }

    input, select, textarea {
        width: 100%;
        padding: 0.8rem 1rem;
        border: 1px solid #E6C9A8;
        border-radius: 5px;
        background-color: #FFFBF5;
        font-family: 'Poppins', sans-serif;
        color: var(--color-text);
        transition: all 0.3s ease;
    }

    input:focus, select:focus, textarea:focus {
        outline: none;
        border-color: var(--color-secondary);
        box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.2);
    }

    button[type="submit"] {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
    }

    /* Footer */
    footer {
        background-color: var(--color-primary);
        color: #fff;
        padding: 4rem 0 1.5rem;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        margin-bottom: 3rem;
    }

    .footer-logo h3 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .footer-logo span {
        color: var(--color-secondary);
    }

    .footer-logo p {
        color: rgba(255, 255, 255, 0.7);
    }

    .footer-links {
        display: flex;
        gap: 4rem;
    }

    .footer-column h4 {
        color: var(--color-tertiary);
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
    }

    .footer-column ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-column li {
        margin-bottom: 0.8rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .footer-column a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-column a:hover {
        color: var(--color-secondary);
    }

    .footer-bottom {
        text-align: center;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.9rem;
    }

    /* Responsive Styles */
    @media (max-width: 992px) {
        .contact-grid {
            grid-template-columns: 1fr;
        }

        .footer-content {
            flex-direction: column;
            gap: 3rem;
        }

        .footer-links {
            flex-wrap: wrap;
            gap: 2rem;
        }
    }

    @media (max-width: 768px) {
        .gallery-grid {
            grid-template-columns: 1fr 1fr;
        }
        
        .gallery-item.large {
            grid-column: span 2;
            grid-row: span 1;
        }
    }

    @media (max-width: 576px) {
        .gallery-grid {
            grid-template-columns: 1fr;
        }
        
        .gallery-item.large {
            grid-column: span 1;
        }
        
        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>


